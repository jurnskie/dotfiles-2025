# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]; then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
export PATH="$HOME/.config/composer/vendor/bin:$PATH"


# ssh 1password agent
# Zorg dat SSH altijd de 1Password agent gebruikt
export SSH_AUTH_SOCK=~/.1password/agent.sock


# --- DDEV & Project Shortcuts ---
alias d="ddev"
alias ds="ddev start"
alias dpa="ddev pause"
alias dr="ddev restart"
alias dlog="ddev logs -f"
alias dssh="ddev ssh"

# --- Laravel Shortcuts (via DDEV) ---
alias dart="ddev php artisan"
alias mfs="ddev php artisan migrate:fresh --seed"
alias dcomp="ddev composer"

# --- Statamic Shortcuts (via DDEV) ---
alias please="ddev php please"
alias p-user="ddev php please user:create"
alias p-cc="ddev php please cache:clear"
alias p-st="ddev php please static:clear"
alias p-ss="ddev php please stache:warm"

# --- Utility ---
alias dots="cd ~/.local/share/chezmoi"
alias cma="chezmoi apply --force"




# Laat een overzicht van belangrijke aliassen zien bij startup
echo -e "\033[1;34m--- ðŸš€ Statamic & DDEV Shortcuts ---\033[0m"
echo -e " \033[1mplease\033[0m  -> ddev php please"
echo -e " \033[1mdart\033[0m    -> ddev php artisan"
echo -e " \033[1mds / dr\033[0m -> ddev start / restart"
echo -e " \033[1mcma\033[0m     -> chezmoi apply (voor nieuwe projecten)"
echo -e "\033[1;34m------------------------------------\033[0m"
echo ""
